\mode<presentation>


\definecolor{IMTALightBlue}{RGB}{0, 184, 222}
\definecolor{IMTABlue}{RGB}{12, 35, 64}
\definecolor{IMTAGreen}{RGB}{164, 210, 51}
\definecolor{IMTAWhite}{RGB}{255, 255, 255}
\definecolor{IMTABlack}{RGB}{60, 60, 60}

\definecolor{light gray}{RGB}{230,230,230}
\definecolor{IMTARed}{RGB}{195,0,0}

% frametitle
\setbeamercolor*{frametitle}{fg=IMTAWhite,bg=IMTALightBlue}

% footline
\setbeamercolor{footline}{fg=IMTAWhite,bg=IMTAGreen}
%\setbeamercolor{footline}{fg=IMTAWhite,bg=IMTALightBlue}

% titlepage
\setbeamercolor*{title page header}{fg=IMTAWhite}
\setbeamercolor*{subtitle page header}{fg=IMTAWhite}
\setbeamercolor*{author}{fg=IMTAWhite}
\setbeamercolor*{date}{fg=IMTAWhite}

% table of contents
\setbeamercolor*{section in toc}{fg=IMTAWhite}
\setbeamercolor*{subsection in toc}{fg=IMTAWhite}

% section title page
\setbeamercolor*{section name}{fg=IMTAWhite}
\setbeamercolor*{section title}{fg=IMTAWhite}
\setbeamercolor*{subsection name}{fg=IMTAWhite}
\setbeamercolor*{subsection title}{fg=IMTAWhite}

% itemize
\setbeamercolor{itemize item}{fg=IMTALightBlue}
\setbeamercolor{itemize subitem}{fg=IMTABlue}

\setbeamercolor{enumerate item}{fg=IMTABlue}

% blocks
\setbeamercolor{block body}{bg=light gray,fg=black}
\setbeamercolor{block body example}{parent=block body}
\setbeamercolor{block body alerted}{parent=block body}

\setbeamercolor{block title}{bg=IMTABlue,fg=IMTAWhite}
\setbeamercolor{block title example}{bg=IMTAGreen,fg=IMTAWhite}
\setbeamercolor{block title alerted}{bg=IMTARed,fg=IMTAWhite}


\setbeamercolor{showcase blue}{bg=IMTABlue,fg=IMTAWhite}
\setbeamercolor{showcase light blue}{bg=IMTALightBlue,fg=IMTAWhite}
\setbeamercolor{showcase red}{bg=IMTARed,fg=IMTAWhite}
\setbeamercolor{showcase green}{bg=IMTAGreen,fg=IMTAWhite}
\setbeamercolor{showcase black}{bg=IMTABlack,fg=IMTAWhite}
\setbeamercolor{showcase body}{bg=light gray,fg=black}
